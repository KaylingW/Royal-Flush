import 'dart:async';
import 'dart:convert';
import 'package:http/http.dart' as http;

import '../key.dart' show key;

class Places {
  final String name;
  final double rating;
  final String address;

  Places.fromJson(Map jsonMap) :
        name = jsonMap['name'],
        rating = jsonMap['rating'].toDouble(),
        address = jsonMap['vicinity'];

  String toString() => 'Place: $name';
}

Future<Stream<Places>> getPlaces(double lat, double lng) async {
  var url = 'https://maps.googleapis.com/maps/api/place/nearbysearch/json' +
      '?location=$lat,$lng' +
      '&radius=500&type=restaurant' +
      '&key=$key';

  // http.get(url).then( (res) => print(res.body) );
  var client = new http.Client();
  var streamedRes = await client.send(new http.Request('get', Uri.parse(url)));

  return streamedRes.stream
      .transform(UTF8.decoder)
      .transform(JSON.decoder)
      .expand((jsonBody) => (jsonBody as Map)['results'])
      .map((jsonPlace) => new Places.fromJson(jsonPlace));
  // .listen( (data) => print(data))
  // .onDone( () => client.close());
}
